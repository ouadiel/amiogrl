<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="Choix du timer"
        android:key="timerChoice"
        android:entries="@array/getterFrequency"
        android:summary="Choisissez la frequence de verification"/>
    <EditTextPreference
        android:title="Your email"
        android:key="email"
        android:inputType="textEmailAddress"
        android:summary="Please provide your email" />
    <com.example.nicolas.projetamio.TimePreference
        android:key="timeWeekStart"
        android:summary="Please select time"
        android:title="Semaine - Plage horaire debut Notification"/>
    <com.example.nicolas.projetamio.TimePreference
        android:key="timeWeekEnd"
        android:summary="Please select time"
        android:title="Semaine - Plage horaire fin Notification et debut email"/>
    <com.example.nicolas.projetamio.TimePreference
        android:title="Week-end - Plage horaire debut - email"
        android:key="timeWEStart"
        android:summary="Please select time"/>
    <com.example.nicolas.projetamio.TimePreference
        android:title="Semaine - Plage horaire fin email"
        android:key="timeWEEnd"
        android:summary="Please select time"/>
    <com.example.nicolas.projetamio.TimePreference
        android:title="Week-end - Plage horaire debut - email"
        android:key="timeWEStart"
        android:summary="Please select time"/>
    <EditTextPreference
        android:title="Week-end - Plage horaire fin - email"
        android:key="timeWEEnd"
        android:summary="Please select time"
        android:inputType="time"
        android:numeric="integer" />
</PreferenceScreen>